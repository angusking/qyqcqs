    <script>
        var userID=appcan.locStorage.getVal('userId');
        appcan.ready(function() {
            var lv = appcan.listview({
                selector : "#listview1",
                type : "thinLine",
                hasAngle : true,
                hasControl : true,
                hasSubTitle : true
            });
            lv.set([{
                title : "消息提醒",
                switchBtn : {
                    mini : true,
                    value : true
                }
            }, {
                title : "使用扬声器播放声音",
                switchBtn : {
                    mini : true,
                    value : true
                }
            }]);
            $("#userid").append(userID);
            $("#userid1").append(userID);
            appcan.request.ajax({
                    url : 'http://114.215.145.215:8080/Wowtour/account/get?userID='+userID+'',
                    type : 'GET',
                    datatype : 'json',
                    success : function(data) {
                        alert("data:"+data);
                        user=eval('('+data+')');
                        if (user.status == "200") {
                            showUser();
                        }
                    },
                    error : function(errMessage) {
                        var errMessage=eval('('+errMessage+')');
                        alert("errMessage:"+errMessage);
                    }
            });
        })
        function showUser(){
            $("#username").append(user.body.email);
            $("#username1").append(user.body.email);
            $("#usermobile").append(user.body.mobile);
            $("#updatamobile").val(user.body.mobile);
            if(user.body.sex==1){
                $("#usersex").append("男");
                $("#updatasex").val("男");
            }
            else {
                $("#usersex").append("女");
                $("#updatasex").val("女");
            }
        }
        function userupdata(){
            $("#showuser").addClass("hidden");
            $("#userupdata").removeClass("hidden");
        }
        function updata(){
            var usermobile= document.getElementById("updatamobile").value;
            var usersex= document.getElementById("updatasex").value;
            appcan.request.ajax({
                    url : 'http://114.215.145.215:8080/Wowtour/account/updata?id='+userID+'',
                    type : 'POST',
                    contentType : 'application/json',
                    success : function(data) {
                        alert("data:"+data);
                        user=eval('('+data+')');
                        if (user.status == "200") {
                            alert("信息更新成功！");
                            history.go(0);
                        }
                    },
                    error : function(errMessage) {
                        var errMessage=eval('('+errMessage+')');
                        alert("errMessage:"+errMessage);
                    }
            });
        }
appcan.button("#loginout", "ani-act", function() {
      uexEasemob.logout();   
      appcan.window.open({
          name : 'load',
          data : 'load.html'
      });
})

 </script>
