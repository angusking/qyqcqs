    <script>
    var evaluation_level;
    var evaluation_detail;
    var speed_level;
    var professional_level;
    var practical_level;
        appcan.ready(function() {
            initOrder();
            appcan.initBounce();
            $("img").on('click',function(){
                var s = $(this).parent();
                var level = $(this).index();
                if(s[0].id == 'evaluation_level') evaluation_level=level+1;
                if(s[0].id == 'speed_level') speed_level=level+1;
                if(s[0].id == 'professional_level') professional_level=level+1;
                if(s[0].id == 'practical_level') practical_level=level+1;
                //因为不支持jquery部分方法，此处采用原生js
                var p = s[0].getElementsByTagName("img");
                for(var i=0;i<=4;i++){//先重置
                    p[i].src="pingjia_content/css/myImg/sort2.png";
                }
                for(var i=0;i<=level;i++){//根据点击进行填充
                    p[i].src="pingjia_content/css/myImg/sort1.png";
                }
            });
            appcan.button("#btn", "ani-act", function() {
                sub();
            });
        });
    function sub(){
        var order_id = $("#order_id").text();
        var user_id = appcan.locStorage.val("user_id");
        evaluation_detail = $("#evaluation_detail").val();
        appcan.request.ajax({
                url : 'http://www.gzbcb.com:8080/qyqcqs/servlet/QueryCurrentOrder',
                type : 'POST',
                data : {
                    "user_id" : user_id,
                    "order_id":order_id,
                    "evaluation_level":evaluation_level,
                    "evaluation_detail":evaluation_detail,
                    "speed_level":speed_level,
                    "professional_level":professional_level,
                    "practical_level":practical_level
                },
                dataType : "json",
                success : function(data) {
                    if (data.error == null) {
                        alert(data.msg);
                    } else {
                        alert(data.msg);
                    }
                },
                error : function(errMessage) {
                    alert("接单失败" + errMessage);
                }
            });
    }
    function initOrder(){
        var user_id = appcan.locStorage.val("user_id");
        appcan.request.ajax({
                url : 'http://www.gzbcb.com:8080/qyqcqs/servlet/QueryCurrentOrder',
                type : 'POST',
                data : {
                    "user_id" : user_id
                },
                dataType : "json",
                success : function(data) {
                    if (data.error == null) {
                        $("#order_name").text(data.order_name);
                        $("#order_id").text(data.order_id);
                    } else {
                        alert(data.msg);
                    }
                },
                error : function(errMessage) {
                    alert("接单失败" + errMessage);
                }
            });
    }
    </script>
