.post_select {
    width: 50%;
    margin: 20px;
}
.order_name {
    font-size: 1em;
    height: 2em;
    margin-left: 20px;
    width: 75%;
}
.order_description {
    margin-top: 1em;
    font-size: 1em;
    height: 8em;
    margin-left: 20px;
    width: 75%;
    padding: 1px 6px;
}
.tcxx {
    width: 85%;
    color: #bebdbf;
    height: 100px;
    border: 1px dashed #C6C6C6;
    padding: 1%;
}
.btn {
    margin: 3% 0;
    background: -webkit-gradient(linear,0 0,0 100%,from(##00A1EA),color-stop(50%,##00A1EA),color-stop(50%,##00A1EA));
    border: 1px solid #FFA700;
    display: block;
    -webkit-border-radius: 8px;
    text-align: center;
    padding: 2%;
    color: ##00A1EA;
    display: block;
}
.ordertable{
    width: 100%;
    color:#333333;
    border-width: 1px;
    border-color: #a9c6c9;
    border-collapse: collapse;
}
.ordertable th{
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color: #a9c6c9;
}
.ordertable td{
    border-width: 1px;
    padding: 8px;
    border-style: solid;
    border-color: #a9c6c9;
}
.oddrowcolor{
    background-color:#d4e3e5;
}
.evenrowcolor{
    background-color:#c3dde0;
}