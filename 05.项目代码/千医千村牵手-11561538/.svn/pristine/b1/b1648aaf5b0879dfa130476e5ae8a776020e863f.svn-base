function login(loginname,password){
    appcan.request.ajax({
                    url : 'http://101.201.47.110:8080/qyqcqs/servlet/Login',
                    type : 'POST',
                    data : {
                      "loginname" : loginname
                    },
                    dataType : "json",
                    success : function(data) {
                        var autoLogin = $("#autoLogin").attr("checked"); 
                        if (autoLogin){
                            appcan.locStorage.setVal("loginname",loginname);
                            appcan.locStorage.setVal("password",password);
                            appcan.locStorage.setVal("autoLogin",true);
                        };
                        if(data.error==null){
                        appcan.locStorage.setVal('user_id',data.user_id);
                        appcan.locStorage.setVal('loginname',loginname);
                        var hash = hex_md5(password);
                        uexEasemob.login('{"username":"'+data.user_id+'","password":"'+password+'"}'); 
                        }else{
                            alert(data.msg);
                        }
                    },
                    error : function(errMessage) {
                        alert("登录失败"+errMessage);
                    }
                });
}
